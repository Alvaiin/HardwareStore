@model Producto

@{
    ViewData["Title"] = Model.Nombre;
}

@section Styles {
    <link href="@Url.Content("~/css/productos/verProducto.css")" rel="stylesheet" type="text/css" />
}


<div class="container">

    <h1>@Model.Nombre</h1>
    <div class="row">
        <img class="col-4" src='@Url.Content("~/img/productos/"+Model.Id+".jpg")' alt="productoFoto">
    </div>
    <h4>Marca: @Model.Marca</h4>
    <h4>Modelo: @Model.Modelo</h4>
    <h4>$ @Model.Precio</h4>
    <form action="@Url.Action("AgregarAlCarrito","Compras")" method="post">
        <input type="hidden" value="@Model.Id" name="Id">
        <input class="btn btn-secondary" type="submit" value="Agregar al carrito">
    </form>
</div>